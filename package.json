{
  "name": "DataChief",
  "repository": {
    "type": "git",
    "url": "https://github.com/iivanic/datachief.git"
  },
  "bugs": {
    "url": "https://github.com/iivanic/datachief/issues"
  },
  "version": "0.0.1",
  "description": "Data collection and EForms solution",
  "main": "src/main.js",
  "scripts": {
    "start": "electron src/main.js",
    "test": "electron src/main.js --runalltests",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Igor Ivanic",
  "license": "GPL-3.0",
  "dependencies": {
    "electron-window-state": "^4.1.1",
    "imap": "0.8.x",
    "mermaid": "7.1.x"
  },
  "devDependencies": {
    "electron": "1.x.x",
    "electron-builder": "^19.46.9"
  },
  "build": {
    "appId": "data.chief",
    "mac": {
      "category": "datachief.app.category.type"
    },
    "directories": {
      "buildResources": "icons"
    },
    "nsis": {
      "language": "1033",
      "installerLanguages": ["en_US"]
    } ,
    "files": [
      "icons/*",
      "node_modules/**/*",
      "src/**/*",
      "package.json",
      "jsconfig.json",
      "README.md",
      "dc_workflow.png",
      "LICENSE",
      "Case study Barrique Works LLC.md"
    ]
  }

}